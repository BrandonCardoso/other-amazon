{
  "name": "Other Amazon",
  "description": "Quickly check other Amazon locales to compare prices and find reviews.",
  "author": "Brandon Cardoso",
  "version": "0",
  "permissions": ["storage"],
  "background": {
      "scripts": ["background.js"]
  },
  "options_ui": {
      "page": "options.html",
      "chrome_style": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.de/*",
        "*://*.amazon.it/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.es/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.in/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.br/*"
      ],
      "js": [
        "other-amazon.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Check another Amazon!"
  },
  "web_accessible_resources": [
    "data/tlds.json"
  ],
  "manifest_version": 2
}
